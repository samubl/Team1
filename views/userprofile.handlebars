					getRecentlyListened(access_token);
				} 
				else {
					// render initial screen
					console.log("No access token");
					$("#linkedaccounts").hide();
					$("#lastlistenedsong").hide();
					$("#ConnectSpotify").show();
				}
			}
		})();
	</script>
</body>
</html>
