<html>
<head>
	<title>J. Smith Homepage</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Linked css files -->
	<link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/userprofile.css" rel="stylesheet">
	<link href="/css/constants.css" rel="stylesheet">
</head>
<body>
	<!-- bootstrap container for page content -->
	<div class="container">
		<!-- Back Button, Username -->
		<div class="backandname">
			<button type="button" onclick="goBack()" id="back">Back</button> 
			<h1>{{username}}</h1>
		</div>	
		<div class="picandlinks">
			<!-- Profile Picture -->
			<div class="pic-container">
				<div class="pic-spacer"></div>
				<a><img src="{{picture}}"></a>
			</div>
			<div class="sub">
				<!-- Links to Stats and Favorites user pages -->
				<h4><a href="/{{username}}/statistics">Statistics</a></h4><hr>
				<h4><a href="/{{username}}/favorites">Playlists</a></h4>
			</div>
		</div>
		<hr>
		<!-- At a Glance Table -->
		<ul class="genres">
			<li><h5>Favorite Genres</h5></li>
			<hr>
			<!-- Top 3 Genres -->
			<li><ul>
				<li><a>Hip-Pop, </a></li>
				<li><a>Indie, </a></li>
				<li><a>Rock</a></li>
			</ul></li>
			<hr>
			<!-- Linked Music Accounts, Add Button -->
			<li><ul>
				<li><h7 class="linked">Linked Accounts</h7></li>
				<li><a>Spotify</a></li>
				<li><a>Apple Music</a></li>
				<li><a>Pandora</a></li>
				<li><a>Soundcloud</a></li>
				<li><button type="button" id="addsource">Add</button></li>
			</ul></li>
		</ul>
		<hr>
		<!-- Navbar Section -->
		<ul class="navbar">
			<li><a href="/{{username}}/index">Home</a></li>
			<li><a href="/{{username}}" class="active">Account</a></li>
			<li><a href='/{{username}}/Friends'>Friends</a></li>
			<li><a href="/{{username}}/Discover">Discover</a></li>	
		</ul>
	</div>

	<!-- connected javascript files -->
	<script src="/js/jquery-1.11.0.js"></script>	
	<script src="/js/bootstrap.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/userprofile.js"></script>
	<script>
		function goBack(){
			window.history.back();
		}
	</script>
</body>
</html>
