<html>
<head>
	<title>Team1 J. Smith Homepage</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Linked css files -->
	<link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/userprofile.css" rel="stylesheet">
	<link href="/css/constants.css" rel="stylesheet">
</head>
<body>
	<!-- bootstrap container for page content -->
	<div class="container">
		<!-- Back Button -->
		<button type="button" onclick="goBack()" id="back">Back</button> 
		<!-- Username -->		
		<h1 id="username">{{username}}</h1>	
		<!-- Profile Picture -->
		<a href="#changepic"><img src="{{picture}}" id="profilepic"></a>
		<div id="changepic">
			<button type="button">Change</button> 
		</div>
		<!-- Genres Table -->
		<ul class="genres">
			<li><h5>Favorite Genres</h5></li>
			<hr>
			<!-- Top 3 Genres -->
			<li><ul>
				<li><a>Genre 1</a></li>
				<li><a>Genre 2</a></li>
				<li><a>Genre 3</a></li>
			</ul></li>
			<hr>
			<!-- Linked Music Accounts, Add Button -->
			<li><ul>
				<li><h7 class="linked">Linked Accounts</h7></li>
				<li><a>Spotify</a></li>
				<li><a>Apple Music</a></li>
				<li><a>Pandora</a></li>
				<li><a>Soundcloud</a></li>
				<li><button type="button" id="addsource">Add</button></li>
			</ul></li>
		</ul>
		<hr>
		<!-- Statistics Table -->
		<h3>Statistics</h3>
		<ul class="stats">
			<li><h7>Stats 1</h7></li>
			<li><h7>Stats 2</h7></li>
			<li><h7>Stats 3</h7></li>
		</ul>
		<hr>
		<!-- Favorites Table -->
		<h3>Favorites</h3>
		<ul class="playlists">
			<ul>
				<li><a href="#playlistops">Playlist 1</a></li>
				<li><a href="#playlistops">Playlist 2</a></li>
				<li><a href="#playlistops">Playlist 3</a></li>
			</ul>
			<ul>
				<li><a href="#playlistops">Playlist 4</a></li>
				<li><a href="#playlistops">Playlist 5</a></li>
				<li><a href="#playlistops">Playlist 6</a></li>
			</ul>	
		</ul>
		<!-- Favorites Options -->
		<div id="playlistops">
				<ul>
					<li><a>Open from</a></li>
					<li><a>Share to</a></li>
					<li><a>Like</a></li>
					<li><a>Similar Lists</a></li>
				</ul>
		</div>
		<hr>
		<!-- Navbar Section -->
		<ul class="navbar">
			<li><a href="/">Home</a></li>
			<li><a href="/{{username}}" class="active">Account</a></li>
			<li><a href='/{{username}}/Friends'>Friends</a></li>
			<li><a href="/{{username}}/Discover">Discover</a></li>	
		</ul>
	</div>

	<!-- connected javascript files -->
	<script src="/js/jquery-1.11.0.js"></script>	
	<script src="/js/bootstrap.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/userprofile.js"></script>
	<script>
		function goBack(){
			window.history.back();
		}
	</script>
</body>
</html>
