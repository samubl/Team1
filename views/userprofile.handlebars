				//when a genre is found that is already saved, update its count
				//the genres with the highest counts are the top genres
				//Will require: 
				//API call to top artists
				//Parsing that data to build a map of genres and counts
				//Taking the top artists from that map based on count
			}

			var params = getHashParams();

			var access_token = params.access_token,
				refresh_token = params.refresh_token,
				error = params.error;

			localStorage.setItem("access_token", access_token);
			
			console.log(access_token);
			console.log(refresh_token);
			if (error) {
				alert('There was an error during the authentication');
			} 
			else {
				//$('#submittedusername').on("click", addSource);
				// $('#colorBtn').click(randomizeColors);
				if (access_token) {
					// render oauth info
					//oauthPlaceholder.innerHTML = oauthTemplate({
					//access_token: access_token,
					//refresh_token: refresh_token
					//});

					//Calls Spotify API to get current users profile
					getUserProfile(access_token);
